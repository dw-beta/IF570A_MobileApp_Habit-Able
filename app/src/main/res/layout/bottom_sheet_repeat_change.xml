<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_repeat_days"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/monday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/monday"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/tuesday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/tuesday"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/wednesday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/wednesday"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/thursday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/thursday"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/friday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/friday"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/saturday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/saturday"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/sunday_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="@string/sunday"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:background="@drawable/gradient_background_blue"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />
</LinearLayout>