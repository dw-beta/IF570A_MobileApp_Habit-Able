<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_background"
    tools:context=".TodayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:background="@color/today_section">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="24sp"
            android:text="TODAY"
            android:textColor="@color/white"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/calendarGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="2"
        android:padding="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="SUN"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="MON"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="TUE"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="WED"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="THU"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="FRI"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="SAT"
            android:layout_marginEnd="8dp"/>
        <!-- Dates will be added programmatically -->
    </GridLayout>

    <!-- Separator Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/habitList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <!-- EditText for new habit input -->
    <EditText
        android:id="@+id/habitInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your new habit"
        android:padding="16dp"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/button_background"
        android:padding="20dp"
        android:text="CREATE A NEW HABIT"
        android:textSize="20sp"/>
</LinearLayout>
